{
    "version": 9,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 31,
        "patch": 0
    },
  "configurePresets": [
    {
      "name": "conf-windows-only",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "conf-ninja-clangcl",
      "displayName": "Ninja generator, ClangCL",
      "inherits": "conf-windows-only",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ninja-clang",
      "cacheVariables": {
        "CMAKE_LINKER": "lld-link",
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl"
      }
    },
    {
      "name": "conf-ninja-msvc",
      "displayName": "Ninja generator, MSVC",
      "inherits": "conf-windows-only",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ninja-msvc",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      }
    },
    {
      "name": "conf-ninja-auto",
      "displayName": "Ninja generator, automatic toolset",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ninja-auto"
    }
  ]
}
